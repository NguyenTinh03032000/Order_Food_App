<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ln_FormSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/tv_login_title"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_above="@+id/ln_FormLogIn"

            android:fontFamily="@font/iciel"
            android:gravity="center"
            android:text="Đăng ký"
            android:textColor="#43A047"
            android:textSize="50sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/et_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_red_edittext"
            android:hint="Tên đăng nhập"
            android:textColorHint="#CCCCCC"
            android:padding="8dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:maxLines="1"/>
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_red_edittext"
            android:hint="Mật khẩu"
            android:layout_marginLeft="20dp"
            android:textColorHint="#CCCCCC"
            android:padding="8dp"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:maxLines="1"/>

        <RadioGroup
            android:id="@+id/rg_Genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">
            <RadioButton
                android:id="@+id/rdio_Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:textColor="#43A047"
                android:buttonTint="#43A047"
                android:checked="true"

                android:textSize="20sp"
                />
            <RadioButton
                android:id="@+id/rdio_Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ"
                android:textColor="#43A047"
                android:buttonTint="#43A047"
                android:textSize="20sp"/>
        </RadioGroup>

        <EditText
            android:layout_marginLeft="20dp"
            android:id="@+id/et_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_red_edittext"
            android:hint="Ngày sinh"
            android:textColorHint="#CCCCCC"
            android:padding="8dp"
            android:drawableLeft="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"/>

        <EditText
            android:layout_marginLeft="20dp"
            android:id="@+id/et_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_red_edittext"
            android:hint="Số điện thoại"
            android:textColorHint="#CCCCCC"
            android:padding="8dp"
            android:inputType="number"
            android:drawableLeft="@drawable/idcard"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:maxLength="8"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="317dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#43A047"
                android:padding="10dp"
                android:text="Đăng ký" />

            <Button
                android:id="@+id/bt_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#43A047"
                android:padding="10dp"
                android:text="Thoát"
                android:textColor="#F7F7F7" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp">

    <TextView
        android:id="@+id/tv_table_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#43A047"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img_table"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/table"
        android:layout_below="@+id/tv_table_name"/>

    <ImageView
        android:id="@+id/img_table_order"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/order"
        android:layout_below="@+id/img_table"
        android:layout_margin="5dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/img_payment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pay"
        android:layout_below="@+id/img_table"
        android:layout_toRightOf="@+id/img_table_order"
        android:layout_margin="5dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/img_hideButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/anbutton"
        android:layout_below="@+id/img_table"
        android:layout_toRightOf="@+id/img_payment"
        android:layout_margin="5dp"
        android:visibility="invisible"/>

</RelativeLayout>